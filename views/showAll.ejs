<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
    integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

  <title>Show Peoples</title>
</head>

<body>


  <div class="container">
    <h1>Show Peoples</h1>
    <p><a class="btn btn-primary" href="/peoples/add" role="button">Add Person</a></p>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">First Name</th>
          <th scope="col">Last Name</th>
          <th scope="col">Age</th>
          <th scope="col">Address</th>
          <th scope="col">isMale</th>
          <th scope="col">Edit</th>
          <th scope="col">Delete</th>
        </tr>
      </thead>
      <tbody>
        <% for( let i = 0; i < people.length; i++) { %>
        <tr>
          <th scope="row"><%= people[i].id %></th>
          <td><%= people[i].firstname %></td>
          <td><%= people[i].lastname %></td>
          <td><%= people[i].age %></td>
          <td><%= people[i].address %></td>
          <td><%= people[i].ismale %></td>
          <td><a class="btn btn-success" href="/peoples/<%= people[i].id %>/edit" role="button">Edit</a></td>
          <td><a class="btn btn-danger" href="/peoples/<%= people[i].id %>/delete" role="button">Delete</a></td>
        </tr>
        <% } %>

      </tbody>
    </table>
  </div>

</body>

</html>